 public class TestFactorial
	{
	
	    public static int factorial(int n) {
		int fact;
		
		if(n == 0)
		    fact = 1;
		else if(n <= 2)
		    fact = n;
		else
		    fact = n * factorial(n - 1);

		return fact;
	    }
		
	    public static void main(String[] args) {
		for(int i = 0;i < 10;i++)
		    System.out.println(i + "! = " + factorial(i));
	    }
		
	} // Factorial
	
	0! = 1
1! = 1
2! = 2
3! = 6
4! = 24
5! = 120
6! = 720
7! = 5040
8! = 40320
9! = 362880
